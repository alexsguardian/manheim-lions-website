---
import CallToAction from './CallToAction.astro'
import { Link } from 'accessible-astro-components'
import { Icon } from 'astro-icon/components'

/**
 * Footer Component
 *
 * @description A component that displays the footer of the website
 */
const { showCallToAction = true } = Astro.props
const currentYear = new Date().getFullYear()
---

<footer>
  {showCallToAction && <CallToAction />}
  <section class="py-8">
    <div class="container flex flex-col gap-4 md:flex-row md:justify-between">
      <p>
        &copy; {currentYear} - Manheim Lions Club.
      </p>
      <div class="flex flex-row gap-4">
        <!-- <Link href="/member-resources" class="type-icon animate-rotate" title="Member Resources">
        <Icon aria-hidden="true" name="lucide:user" class="text-black"/>
      </Link> -->
        <Link
          href="https://github.com/alexsguardian/manheim-lions-website"
          target="_blank"
          rel="noopener"
          class="type-icon animate-rotate"
          title="Website Repository"
        >
          <Icon aria-hidden="true" name="lucide:github" class="text-black" />
        </Link>
      </div>
    </div>
  </section>
</footer>

<style>
  section {
    border-top: 1px solid var(--border-color-subtle);
  }
</style>
