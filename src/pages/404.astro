---
import DefaultLayout from '@layouts/DefaultLayout.astro'
import { Heading, Link } from 'accessible-astro-components'
---

<DefaultLayout title="404">
  <section class="my-12">
    <div class="container text-center text-3xl">
      <Heading level="h1">404</Heading>
    </div>
  </section>
  <section class="my-12 text-center">
    <div class="space-content container">
      <p class="text-2xl">Oops! This page does not exist.</p>
      <p class="mb-8">If you think this is an error, please reach out to: webmaster@alexsguardian.net</p>
      <Link href="/" isButton type="default" animateOnHover animationType="nudge">
        Return home
      </Link>
    </div>
  </section>
</DefaultLayout>
