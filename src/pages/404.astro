---
import DefaultLayout from '@layouts/DefaultLayout.astro'
import { Link } from 'accessible-astro-components'
import PageHeader from '@components/PageHeader.astro'
---

<DefaultLayout title="404">
  <PageHeader title="404" subtitle="Page Not Found" bgType="gradient" showBreadcrumbs={false} class="text-center" />
  <section class="my-12 text-center">
    <div class="space-content container">
      <p class="text-2xl">Oops! This page does not exist.</p>
      <p class="mb-8">
        If you think this is an error, please reach out to: <Link href="mailto:webmaster@alexsguardian.net"
          >webmaster@alexsguardian.net</Link
        > with the url you were trying to access.
      </p>
      <Link href="/" isButton type="primary" animateOnHover animationType="nudge"> Return home </Link>
    </div>
  </section>
</DefaultLayout>
